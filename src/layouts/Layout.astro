---
import { SEO } from "astro-seo";

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/marjeda-web-site/opengraph.jpg",
  Astro.site,
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "MARJEDA INDUSTRIAL"
  : "MARJEDA INDUSTRIAL - BIENVENIDO";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/marjeda-web-site/favicon.svg"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <SEO
      title={makeTitle}
      description="Optimizamos suministros y mantenimiento para máxima eficiencia."
      canonical={canonicalURL}
      twitter={{
        creator: "@josafatmtzdev",
        site: "bigcreator.dev",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `MARJEDA INDUSTRIAL | ${title}`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Marjeda Industrial Homepage Screenshot",
        },
        optional: {
          locale: "es_MX",
          description:
            "Optimizamos suministros y mantenimiento para máxima eficiencia.",
        },
      }}
    />
  </head>
  <body>
    <slot />
    <style is:global>
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
      html {
        font-family: system-ui, sans-serif;
        background: #13151a;
        background-size: 224px;
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
    </style>
  </body>
</html>